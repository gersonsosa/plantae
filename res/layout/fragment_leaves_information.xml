<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#e5e5e5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/bg_card">
            <TextView
                android:id="@+id/leaves_information_title"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/leaves_information_title"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/leaves_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leaves_information_title"
                android:hint="@string/prompt_leaves_number"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>

            <Spinner
                android:id="@+id/leaf_arrangement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leaves_number" />

            <Spinner
                android:id="@+id/sheath_nature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leaf_arrangement" />

            <LinearLayout
                android:id="@+id/leaf_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/sheath_nature">
                <EditText
                    android:id="@+id/leaf_color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_leaf_color"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"/>
                <SurfaceView
                    android:id="@+id/leaf_color_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <EditText
                android:id="@+id/leaf_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leaf_color"
                android:hint="@string/prompt_leaf_size"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"/>

            <Spinner
                android:id="@+id/limbo_nature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leaf_size" />

            <EditText
                android:id="@+id/rachis_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/limbo_nature"
                android:hint="@string/prompt_rachis_length"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"/>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/bg_card">
            <EditText
                android:id="@+id/petiole_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_petiole_size"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/petiole_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/petiole_size"
                android:hint="@string/prompt_petiole_form"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"/>

            <LinearLayout
                android:id="@+id/petiole_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/petiole_form">
                <EditText
                    android:id="@+id/petiole_color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_petiole_color"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"/>
                <SurfaceView
                    android:id="@+id/petiole_color_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/petiole_coverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/petiole_color" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/bg_card">

            <EditText
                android:id="@+id/pinnae_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_pinnae_number"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/pinnae_arrangement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pinnae_number"
                android:hint="@string/prompt_pinnae_arrangement"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true"/>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/bg_card">
            <EditText
                android:id="@+id/leaves_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/prompt_leaves_description"
                android:inputType="text"
                android:minLines="3"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>