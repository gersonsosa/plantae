<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#e5e5e5">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_card">
        <TextView
            android:id="@+id/flowers_information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flower_information_title"
            android:textSize="34sp" />

        <LinearLayout
            android:id="@+id/calyx"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/flowers_information_title"
            android:paddingBottom="4dp">
            <TextView
                android:id="@+id/calyx_color_text"
                android:layout_width="0dip"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="@string/prompt_calyx" />
            <ImageView
                android:id="@+id/calyx_color"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:src="@color/plantae_black"
                android:contentDescription="@string/pick_color"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/corolla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/calyx"
            android:paddingBottom="4dp">
            <TextView
                android:id="@+id/corolla_color_text"
                android:layout_width="0dip"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_corolla"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/corolla_color"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:src="@color/plantae_black"
                android:contentDescription="@string/pick_color"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stamens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/corolla"
            android:paddingBottom="4dp">
            <TextView
                android:id="@+id/stamens_color_text"
                android:layout_width="0dip"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_stamens"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/stamens_color"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:src="@color/plantae_black"
                android:contentDescription="@string/pick_color"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pistiliodio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/stamens"
            android:paddingBottom="4dp">
            <TextView
                android:id="@+id/pistiliodio_color_text"
                android:layout_width="0dip"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_pistiliodio"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/pistiliodio_color"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:src="@color/plantae_black"
                android:contentDescription="@string/pick_color"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gineceo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/pistiliodio"
            android:paddingBottom="4dp">
            <TextView
                android:id="@+id/gineceo_color_text"
                android:layout_width="0dip"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_gineceo"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/gineceo_color"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:src="@color/plantae_black"
                android:contentDescription="@string/pick_color"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stigmata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/gineceo"
            android:paddingBottom="4dp">
            <TextView
                android:id="@+id/stigmata_color_text"
                android:layout_width="0dip"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_stigmata"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/stigmata_color"
                android:layout_width="0dip"
                android:layout_weight="0.2"
                android:src="@color/plantae_black"
                android:contentDescription="@string/pick_color"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <EditText
            android:id="@+id/flowers_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/prompt_flowers_description"
            android:layout_below="@+id/stigmata"
            android:inputType="text"
            android:minLines="3"/>

    </RelativeLayout>
</ScrollView>