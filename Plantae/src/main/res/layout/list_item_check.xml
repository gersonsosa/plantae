<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeight">
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"/>
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkbox"
        android:layout_centerVertical="true"
        android:textColor="@color/plantae_87_grey"
        android:typeface="sans"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/item_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_title"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:textColor="@color/list_item_title"
        android:textSize="12sp"
        android:layout_marginTop="1dip"/>
    <TextView
        android:id="@+id/subitem_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:layout_marginRight="5dip"
        android:textSize="14sp"
        android:textColor="@color/plantae_54_grey"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/item_located"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_device_access_location_found"
        android:layout_below="@+id/subitem_count"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>