<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PlantaeTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/plantae_main_color</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/plantae_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/plantae_accent_main_color</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
        <item name="colorControlActivated">@color/plantae_accent_dark</item>
        <item name="colorControlHighlight">@color/plantae_accent_light</item>
        <item name="colorSwitchThumbNormal">@color/plantae_70_white</item>
        <item name="android:windowBackground">@color/plantae_fallback</item>

        <item name="android:actionModeBackground">@color/plantae_accent_main_color</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_navigation_accept</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="Theme.PlantaeToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/plantae_main_color</item>
        <item name="android:windowBackground">@color/plantae_main_color</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="android:color">@color/plantae_fallback</item>
    </style>
</resources>