<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.udistrital.plantae"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="edu.udistrital.plantae.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.udistrital.plantae.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="edu.udistrital.plantae.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="edu.udistrital.plantae.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.udistrital.plantae.LoginActivity" />
        </activity>
        <activity
            android:name=".CreateTravelActivity"
            android:parentActivityName="edu.udistrital.plantae.MainActivity"
            android:label="New travel"/>
        <activity
            android:name=".CreateProjectActivity"
            android:parentActivityName="edu.udistrital.plantae.CreateTravelActivity"
            android:label="Create project"/>
        <activity
            android:name=".SettingsAcivity"
            android:label="Settings"/>
        <activity
            android:name=".CreateSpecimenActivity"
            android:parentActivityName="edu.udistrital.plantae.MainActivity"
            android:label="Create Specimen"/>

        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    </application>

</manifest>
